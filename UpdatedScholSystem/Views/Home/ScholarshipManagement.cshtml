<script>
    $(document).ready(function () {
        debugger;
        var listType = $("input[name='Tab']:checked").data('value');
        var scholarshipname = $("input[name='Tab']:checked").data('text');
        debugger;
        $("#divScholarshipName .titlename").html("List of all " + scholarshipname);
        hideAll();
