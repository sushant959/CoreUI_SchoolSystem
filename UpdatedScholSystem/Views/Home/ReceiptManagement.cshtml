                {
                    'title': 'Date',
                    'data': 'Date'
                },
                {
                    'title': 'Total',
                    'data': 'TotalAmount'
                },
                {
                    'title': 'Paid',
                    'data': 'PaidAmount'
                },
                {
                    'title': 'Due',
                    'data': 'DueAmount'
                },
                {
                    'title': 'Discount',
                    'data': 'Discount'
                },
                {
                    'title': 'Fine',
                    'data': 'Fine'
                },
                {
                    'title': 'PaymentMethod',
                    'data': 'PaymentMethod'
                },
                {
                    'title': 'BankName',
                    'data': 'BankName'
                },
                {
                    'title': 'ChequeNo',
                    'data': 'ChequeNo'
                },
                {
                    'title': 'CreatedBy',
                    'data': 'CreatedBy'
                }

            ]
        });
        debugger;
        $("#titlename").html("List of Receipt Details");
    }

