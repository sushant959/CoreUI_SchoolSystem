                $("#tblStaffList").append(html);

            },
            error: function (e) {
                console.error(e);
                alert(e.statusText);
            }
        })
    }

    var staffListByDesignation = function (batch,department,designation, date) {
        $.ajax({
            url: "/api/GetStaffListByDesignation",
            method: "GET",
            data: {
                Batch: batch,
                Department: department,
                Designation: designation,
                Date: date,
