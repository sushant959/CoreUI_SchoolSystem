    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Manage Group</h4>
                <hr />
                @*@if (actions.Contains("add"))
                {*@
                    <form id="addGroup">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <input type="hidden" name="ID" />
