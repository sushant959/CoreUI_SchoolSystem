<script type="text/javascript">

    var convertMonth = function (month) {

        switch (month) {
            case "01": return "Baisakh";
            case "02": return "Jesth";
            case "03": return "Asar";
            case "04": return "Sawan";
            case "05": return "Bhadau";
            case "06": return "Aaswin";
            case "07": return "Kartik";
            case "08": return "Mangsir";
            case "09": return "Push";
            case "10": return "Magh";
            case "11": return "Falgun";
            case "12": return "Chait";
        };
    }

    var convertMonthInt = function (month) {
        switch (month) {
            case "Baisakh": return "01";
            case "Jesth": return "02";
            case "Asar": return "03";
            case "Sawan": return "04";
            case "Bhadau": return "05";
            case "Aaswin": return "06";
            case "Kartik": return "07";
            case "Mangsir": return "08";
            case "Push": return "09";
            case "Magh": return "10";
            case "Falgun": return "11";
            case "Chait": return "12";
        };
    }
</script>